---
layout: page
---

<% content_for :head do %>
    Archive
<% end%>

<h2 class="h3">By Year</h2>
<ul class="posts">
    <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
        <li><%= link_to year, blog_year_path(year) %> (<%= articles.size %>)</a></li>
    <% end %>
</ul>

<h2 class="h3">All</h2>
<ul class="posts">
    <% page_articles.each_with_index do |article, i| %>
        <li>
        <span><%= article.date.strftime('%b %e') %></span> &raquo; <%= link_to article.title, article %>
        </li>
    <% end %>
</ul>


